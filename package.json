{
  "name": "nodejs-blog",
  "version": "0.0.0",
  "private": true,
  "lint-staged": {
    "*.{js,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "sass:build": "sass styles/style.scss public/stylesheets/style.css",
    "sass:watch": "sass --watch styles/style.scss:public/stylesheets/style.css",
    "format": "prettier --write ."
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "debug": "~4.4.1",
    "dotenv": "^17.2.0",
    "express": "~5.1.0",
    "express-validator": "^7.2.1",
    "hbs": "~4.2.0",
    "helmet": "^8.1.0",
    "http-errors": "~2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.10.0",
    "sass": "^1.89.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
